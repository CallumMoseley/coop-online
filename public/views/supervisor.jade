extends layout

block content
    h1 Find your co-op supervisor
    //form.form-inline(action="/supervisor" method="post")
    //button.btn.btn-primary
    //    span.glyphicon.glyphicon-search
    label(for="search-box") Search
    input.form-control.form-inline#search-box(type="text" name="query" autocomplete="off")
    br
    p.text-center#response-text
    br
    table.table.table-bordered#results
        tr
            th Supervisor Name
            th Company
            th Address
            th Job Type
            th Select
        if results
            each s in results
                tr.supervisor-row
                    td= s.name.first + " " + s.name.last
                    td= s.company.name
                    td= s.company.address
                    td= s.company.type
                    td
                        button.btn.btn-info(onclick="selectSuper(" + s.userid + ")") Select
block scripts
    script(src="../js/supervisor.js")