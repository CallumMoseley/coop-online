extends layout

block content
    h1 Password Reset

    form(action="" method="post" id="reset-form")
        input(type="hidden" name="token" value=token)
        .form-group
            label(for="password") Password:
            input.form-control#password(type="password" name="password")
        .form-group
            label(for="confirm") Confirm password:
            input.form-control#confirm(type="password" name="confirm")
        input(type="submit" class="btn btn-default" value="Reset Password")

block scripts
    script(src="../js/reset.js")