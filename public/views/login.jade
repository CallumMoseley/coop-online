extends layout

block content
    h1 Log in to Co-op Online
    p.text-danger.text-center.text= message
    a(href="/forgot") Forgot your password?
    br
    form(action="/login" method="post" id="login-form")
        .form-group
            label(for="email") Email address:
            input.form-control#email(type="text" name="username" placeholder="someone@example.com")
        .form-group
            label(for="password") Password:
            input.form-control#password(type="password" name="password")
        input(type="submit" class="btn btn-default" value="Log in")

block scripts
    script(src="../js/login.js")